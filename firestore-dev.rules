rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules - more permissive for testing
    // WARNING: These rules are for local development only!
    
    match /lobbies/{lobbyId} {
      // Allow all operations in development
      allow read, write: if true;
    }
    
    match /games/{gameId} {
      // Allow all operations in development  
      allow read, write: if true;
    }
    
    // Allow access to any other collections for testing
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
